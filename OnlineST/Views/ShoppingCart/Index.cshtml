
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OnlineST.Models.Pagination.PaginationModel<CartProduct>

@using OnlineST.Models.Pagination;

<div>
    @if (Model.PaginatedCollection is not null)
    {
        @foreach (CartProduct cartProduct in (Model.PaginatedCollection as IPaginatedCollection<CartProduct>).Collection)
        {
            <div class="card">
                <div class="card-body">@cartProduct.Product?.Name</div>
                <div class="card-footer"></div>
            </div>
        }
    }

</div>

@await Component.InvokeAsync(typeof(OnlineST.Components.PaginationViewComponent), Model)


